<div class="container">
  <h2>New task</h2>

  <%= form_for(@task) do |f| %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :details %>
    <%= f.text_field :details %>
  </p>
  <p>
    <%= f.label :completed %>
    <%= f.number_field :completed %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>


<%= link_to "Back to list", tasks_path %>

</div>
